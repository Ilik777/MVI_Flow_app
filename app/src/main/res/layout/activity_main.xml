<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="MissingPrefix"
    >

    <TextView
        android:id="@+id/layout_item_favorite_text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_large_margin"
        android:layout_marginLeft="@dimen/view_large_margin"
        android:layout_marginTop="@dimen/view_medium_extra_margin"
        android:layout_marginRight="@dimen/view_large_margin"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="1"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_moderate_size"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/layout_item_favorite_image_view_favorite"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Заголовок объявления"
        />

    <ImageView
        android:id="@+id/layout_item_favorite_image_view_favorite"
        android:layout_width="@dimen/layout_item_advert_list_favorite_image_size"
        android:layout_height="@dimen/layout_item_advert_list_favorite_image_size"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/view_medium_extra_margin"
        android:layout_marginEnd="@dimen/view_large_margin"
        android:layout_marginRight="@dimen/view_large_margin"
        android:padding="@dimen/view_smedium_padding"
        android:scaleType="center"
        android:src="@drawable/ic_favorite_heart_empty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        tools:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/layout_item_favorite_text_view_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_small_margin"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@id/layout_item_favorite_image_view_favorite"
        app:layout_constraintStart_toStartOf="@id/layout_item_favorite_text_view_title"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_text_view_title"
        >

        <TextView
            android:id="@+id/layout_item_favorite_text_view_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/view_mlarge_margin"
            android:background="@drawable/bg_favorite_archive_advert_textview_red"
            android:paddingHorizontal="@dimen/view_small_padding"
            android:paddingBottom="@dimen/view_tiny_padding"
            android:text="в архиве"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_extra_size"
            android:visibility="visible"
            app:layout_constraintBaseline_toBaselineOf="@id/layout_item_favorite_text_view_price"
            app:layout_constraintEnd_toStartOf="@id/layout_item_favorite_text_view_price"
            app:layout_constraintStart_toStartOf="@id/layout_item_favorite_text_view_title"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/layout_item_favorite_text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_moderate_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/layout_item_favorite_credit_label_separator"
            app:layout_constraintStart_toEndOf="@id/layout_item_favorite_text_view_archive"
            app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_text_view_title"
            tools:text="24 000 000"
            />

        <View
            android:id="@+id/layout_item_favorite_credit_label_separator"
            android:layout_width="@dimen/separator_height"
            android:layout_height="@dimen/large_line_height"
            android:layout_marginStart="@dimen/view_medium_margin"
            android:layout_marginTop="@dimen/view_smedium_margin"
            android:layout_marginBottom="@dimen/view_smedium_margin"
            android:background="@color/separator"
            app:layout_constraintBottom_toBottomOf="@id/layout_item_favorite_text_view_price"
            app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_text_view_price"
            app:layout_constraintTop_toTopOf="@id/layout_item_favorite_text_view_price"
            />

        <TextView
            android:id="@+id/layout_item_favorite_text_view_credit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_medium_margin"
            android:text="в кредит"
            android:textColor="@color/layout_item_favorite_text_view_credit_label_text_color"
            android:textSize="@dimen/text_medium_size"
            app:layout_constraintBottom_toBottomOf="@id/layout_item_favorite_text_view_price"
            app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_credit_label_separator"
            app:layout_constraintTop_toTopOf="@id/layout_item_favorite_text_view_price"
            />

        <TextView
            android:id="@+id/layout_item_favorite_text_view_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_medium_margin"
            android:background="@drawable/bg_loan_label_yellow"
            android:paddingLeft="@dimen/view_smedium_padding"
            android:paddingTop="@dimen/view_extra_small_padding"
            android:paddingRight="@dimen/view_smedium_padding"
            android:paddingBottom="@dimen/view_extra_small_padding"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_medium_size"
            app:layout_constraintBottom_toBottomOf="@id/layout_item_favorite_text_view_price"
            app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_text_view_credit_label"
            app:layout_constraintTop_toTopOf="@id/layout_item_favorite_text_view_price"
            tools:text="130 426 ₸/мес"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/layout_item_favorite_credit_label_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="layout_item_favorite_credit_label_separator, layout_item_favorite_text_view_credit_label, layout_item_favorite_text_view_credit"
            tools:visibility="visible"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_item_favorite_container_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_large_margin"
        android:layout_marginTop="@dimen/view_medium_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_text_view_group"
        >

        <ImageView
            android:id="@+id/layout_item_favorite_image_view_thumbnail"
            android:layout_width="@dimen/layout_item_advert_list_thumbnail_width"
            android:layout_height="@dimen/layout_item_advert_list_thumbnail_height"
            android:background="@drawable/bg_favorites_advert_photo_placeholder"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/layout_item_favorite_text_view_photos_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_small_margin"
        android:layout_marginBottom="@dimen/view_small_margin"
        android:background="@drawable/bg_photo_number_dark"
        android:paddingLeft="@dimen/view_medium_padding"
        android:paddingTop="@dimen/view_tiny_padding"
        android:paddingRight="@dimen/view_medium_padding"
        android:paddingBottom="@dimen/view_tiny_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintBottom_toBottomOf="@id/layout_item_favorite_container_thumbnail"
        app:layout_constraintRight_toRightOf="@id/layout_item_favorite_container_thumbnail"
        tools:text="2"
        />

    <Space
        android:id="@+id/layout_item_favorite_separator_extra_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_small_margin"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_barrier_description"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/layout_item_favorite_badges_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_16"
        android:layout_marginTop="@dimen/view_small_margin"
        android:layout_marginEnd="@dimen/view_margin_16"
        app:constraint_referenced_ids="layout_item_favorite_new_auto_badge, layout_item_favorite_from_dealer_badge, layout_item_favorite_resale_name_badge, layout_item_favorite_resale_bonus_badge"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="@dimen/margin_8x"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="@dimen/margin_8x"
        app:flow_wrapMode="chain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_separator_extra_margin"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/layout_item_favorite_barrier_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="layout_item_favorite_text_view_region, layout_item_favorite_container_thumbnail"
        />

    <include
        android:id="@+id/layout_item_favorite_new_auto_badge"
        layout="@layout/layout_new_auto_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <include
        android:id="@+id/layout_item_favorite_from_dealer_badge"
        layout="@layout/layout_from_dealer_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <include
        android:id="@+id/layout_item_favorite_resale_name_badge"
        layout="@layout/layout_resale_name_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <include
        android:id="@+id/layout_item_favorite_resale_bonus_badge"
        layout="@layout/layout_resale_bonus_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/layout_item_favorite_text_view_details"
        style="@style/LayoutItemSearchResultAdvertTextViewDescriptionStyle"
        android:maxLines="2"
        android:textColor="@color/layout_item_favorite_text_view_details_text_color"
        app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_container_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_item_favorite_container_thumbnail"
        tools:text="2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник2018 г, 1 128 888 км,  2.7 л газ-бензин, типтроник"
        />

    <TextView
        android:id="@+id/layout_item_favorite_text_view_description"
        style="@style/LayoutItemSearchResultAdvertTextViewDescriptionStyle"
        android:maxLines="3"
        android:textColor="@color/layout_item_favorite_text_view_description_text_color"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_container_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_text_view_details"
        tools:text="Продам машинуПродам машинуПродам машинуПродам машинуПродам машинуПродам машинуПродам машинуПродам машинуПродам машинуПродам машинуПродам машину"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/layout_item_favorite_text_view_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_medium_margin"
        android:layout_marginEnd="@dimen/view_large_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/layout_item_favorite_text_view_region_text_color"
        android:textSize="@dimen/text_small_extra_size"
        app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_container_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_text_view_description"
        tools:text="Алматы"
        />

    <TextView
        android:id="@+id/layout_item_favorite_text_view_place_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_large_margin"
        android:layout_marginTop="@dimen/margin_14x"
        android:layout_marginBottom="@dimen/view_mlarge_margin"
        android:textColor="@color/layout_item_favorite_text_view_place_date_text_color"
        android:textSize="@dimen/text_small_extra_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_item_favorite_badges_flow"
        app:layout_goneMarginBottom="@dimen/margin_14x"
        tools:text="20 ноября"
        />

    <TextView
        android:id="@+id/layout_item_favorite_text_view_views_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_large_margin"
        android:drawablePadding="@dimen/view_tiny_padding"
        android:gravity="center_vertical"
        android:textColor="@color/layout_item_favorite_text_view_views_count_text_color"
        android:textSize="@dimen/text_small_extra_size"
        app:drawableLeftCompat="@drawable/ic_view_count"
        app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_text_view_place_date"
        app:layout_constraintTop_toTopOf="@id/layout_item_favorite_text_view_place_date"
        app:layout_constraintBottom_toBottomOf="@id/layout_item_favorite_text_view_place_date"
        tools:text="2 542 485"
        />

    <TextView
        android:id="@+id/layout_item_favorite_text_view_favorites_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_large_margin"
        android:drawablePadding="@dimen/view_tiny_padding"
        android:gravity="center_vertical"
        android:textColor="@color/layout_item_favorite_text_view_favorites_count_text_color"
        android:textSize="@dimen/text_small_extra_size"
        app:drawableLeftCompat="@drawable/ic_favorites_counter_heart"
        app:layout_constraintLeft_toRightOf="@id/layout_item_favorite_text_view_views_count"
        app:layout_constraintTop_toTopOf="@id/layout_item_favorite_text_view_place_date"
        app:layout_constraintBottom_toBottomOf="@id/layout_item_favorite_text_view_place_date"
        tools:text="2 542 485"
        />
</androidx.constraintlayout.widget.ConstraintLayout>